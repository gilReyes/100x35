    <div class="row">
        <div class="col-md-7">
            <span class="bold">
                @Model.Sender
            </span>
            to <span class="bold">
                me
            </span>
            on @Model.Message.Sent_Date
        </div>
        <div class="col-md-5 inbox-info-btn">
            <div class="btn-group">
                <button id="ReplyBtn" data-messageid="@Model.Message_Id" class="btn blue reply-btn">
