@model IEnumerable<Entity.GetDeletedMessages_SP_Result>

<div class="inbox-header">
    <h1 class="pull-left">Trash</h1>
</div>
<div class="inbox-content">
    <table class="table table-striped table-advance table-hover">
        <thead>
            <tr>
                <th colspan="2">
                    <span>
                        From
                    </span>
                </th>
                <th colspan="3">
                    <span>
                        Subject
                    </span>
                </th>
                <th>
                    <span>
                        Date
                    </span>
                </th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="6">You have not deleted any messages...</td>
                </tr>
            }
            else
            {
                foreach (var message in Model)
                {
                    var cssString = (message.Read_Date == null) ? "message-trash unread" : "message-trash";

                    <tr class="@cssString" data-messageid="@message.Message_Id">
                        <td class="view-message hidden-xs">
                            @message.Sender
                        </td>
                        <td class="view-message ">
                            @message.Subject
                        </td>
                        <td class="view-message text-right">
                            @message.Sent_Date
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
